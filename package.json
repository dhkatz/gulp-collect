{
  "name": "gulp-filename",
  "version": "5.0.3",
  "description": "Register every filename that has passed through",
  "main": "lib/index.js",
  "files": [
    "lib/",
    "typings/",
    "test/"
  ],
  "types": "typings/index.d.ts",
  "keywords": [
    "gulpplugin"
  ],
  "author": {
    "name": "David Katz",
    "email": "dhkatz.16@gmail.com"
  },
  "contributors": [
    {
      "name": "Joao Dias",
      "email": "joao.l.d.a@hotmail.com",
      "url": "https://github.com/JohnyDays"
    },
    {
      "name": "Bruce MacNaughton",
      "email": "bmacnaughton@gmail.com"
    }
  ],
  "repository": "dhkatz/gulp-filename",
  "scripts": {
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "tsc",
    "lint": "eslint src/**/* && tsc --noEmit",
    "test": "jest --ci --verbose --forceExit --detectOpenHandles",
    "test:coverage": "jest --coverage --ci",
    "coverage": "./node_modules/.bin/jest --coverage && cat ./coverage/lcov.info | ./node_modules/.bin/coveralls"
  },
  "license": "MIT",
  "dependencies": {
    "through2": "^3.0.1"
  },
  "devDependencies": {
    "@types/gulp": "^4.0.6",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.2",
    "@types/through2": "^2.0.34",
    "@types/vinyl": "^2.0.3",
    "@types/vinyl-source-stream": "0.0.30",
    "@typescript-eslint/eslint-plugin": "^2.1.0",
    "@typescript-eslint/parser": "^2.0.0",
    "coveralls": "^3.0.6",
    "eslint": "^5.16.0",
    "gulp": "^4.0.2",
    "jest": "^24.9.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3",
    "vinyl": "^2.2.0",
    "vinyl-source-stream": "^2.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "browser": true,
      "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "no-console": "off",
      "no-dupe-class-members": "off",
      "@typescript-eslint/indent": [
        "error",
        4
      ]
    }
  }
}
